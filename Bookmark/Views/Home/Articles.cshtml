@{
    Article? article;

    using (ApplicationDbContext applicationDbContext = new ApplicationDbContext())
    {
        int id = Convert.ToInt32(Context.Request.Query["id"]);
        article = applicationDbContext.Articles.Where((x) => x.Id == id).First();
    }

    HtmlString title = new HtmlString(article.Title);
    HtmlString text = new HtmlString(article.Text);
}

<article>
    @title
    @text
</article>